config BR2_PACKAGE_TREZOR_FIRMWARE
	bool "trezor-firmware"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON3_PY_PYC
	help
	  Trezor Core emulator for hardware wallet functionality.
	  
	  This provides the Trezor firmware emulator that runs
	  natively on Linux systems, providing full hardware wallet
	  capabilities with touchscreen support.
	  
	  https://github.com/trezor/trezor-firmware

comment "trezor-firmware needs Python 3"
	depends on !BR2_PACKAGE_PYTHON3
